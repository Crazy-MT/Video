			JSONObject rs = null;
			for (int i = 0; i < objectArr.size(); i++) {
				rs = (JSONObject) objectArr.opt(i);
				movie = new Movie(rs.getInt("film_id"),rs.getString("name"), rs.getString("genre"),
						rs.getString("intro"), rs.getString("poster_url"),
